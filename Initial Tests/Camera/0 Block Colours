import cv2
import numpy as np

# Define the RGB color (238, 39, 55)
# OpenCV expects BGR, so we arrange it as (55, 39, 238)
bgr_red = np.array([55, 39, 238])
bgr_green = np.array([44, 214, 268])
bgr_magenta = np.array([255, 0, 255])

# Convert BGR to HSV
hsv_red = cv2.cvtColor(bgr_red, cv2.COLOR_BGR2HSV)
hsv_green = cv2.cvtColor(bgr_green, cv2.COLOR_BGR2HSV)
hsv_magenta = cv2.cvtColor(bgr_magenta, cv2.COLOR_BGR2HSV)

print(f"red block in OpenCV HSV is {hsv_red}")
print(f"green block in OpenCV HSV is {hsv_green}")
print(f"magenta block in OpenCV HSV is {hsv_magenta}")